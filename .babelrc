{
  "ignore": [
    "**/story.*",
    "node_modules"
  ],

  "presets": [
    "es2015",
    "es2016",
    "es2017",
    "react"
  ],

  "plugins": [
    [
      "react-css-modules",
      {
        "context":                "./",
        "exclude":                "node_modules",
        "generateScopedName":     "react-layouts-[local]",
        "handleMissingStyleName": "throw"
      }
    ]
  ],

  "sourceMaps": true
}
